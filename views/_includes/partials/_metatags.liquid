{% assign root = "https://provalabsocialinnovation.web.app" %}
{% assign image = root | append: "/assets/social-share.jpg" %}

<title>{{ title }}</title>

<meta
    name="type"
    property="og:type"
    content="website" />
<meta
    name="title"
    property="og:title"
    content="{{ title }}" />
<meta
    name="url"
    property="og:url"
    content="{{ root | append: url }}" />
<meta
    name="description"
    property="og:description"
    content="{{ description }}" />


<meta
    name="image"
    property="og:image"
    content="{{ image }}" />

<meta name="twitter:card" content="summary_large_image" />
{% comment %} <meta name="twitter:site" content="@alec4nandes" /> {% endcomment %}
<meta name="twitter:title" content="{{ title }}" />
<meta name="twitter:description" content="{{ description }}" />
<meta name="twitter:image" content="{{ image }}" />