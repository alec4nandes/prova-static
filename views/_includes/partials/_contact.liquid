<div id="contact" class="rotating-left columns">
    <div class="rotating">
        <img src="/assets/coffees.png" />
    </div>
    <div class="content">
        <h1 class="section-title">Contact</h1>
        <div class="wpforms-container wpforms-container-full custom-contact" id="wpforms-218">
            <form
                id="wpforms-form-218"
                class="wpforms-validate wpforms-form wpforms-ajax-form"
                data-formid="218"
                method="post"
                enctype="multipart/form-data"
                action="/"
                data-token="a004ed91d1b60fbb007edbfc90c06735">
                <noscript class="wpforms-error-noscript">Please enable JavaScript in your browser to complete this form.</noscript>
                <div class="wpforms-field-container">
                    <div
                        id="wpforms-218-field_0-container"
                        class="wpforms-field wpforms-field-name"
                        data-field-id="0">
                        <label class="wpforms-field-label" for="wpforms-218-field_0">Name
                            <span class="wpforms-required-label">*</span>
                        </label><input
                            type="text"
                            id="wpforms-218-field_0"
                            class="wpforms-field-medium wpforms-field-required"
                            name="wpforms[fields][0]"
                            placeholder="Name"
                            required></div>
                    <div
                        id="wpforms-218-field_1-container"
                        class="wpforms-field wpforms-field-email"
                        data-field-id="1">
                        <label class="wpforms-field-label" for="wpforms-218-field_1">Email
                            <span class="wpforms-required-label">*</span>
                        </label><input
                            type="email"
                            id="wpforms-218-field_1"
                            class="wpforms-field-medium wpforms-field-required"
                            name="wpforms[fields][1]"
                            placeholder="Email"
                            required></div>
                    <div
                        id="wpforms-218-field_2-container"
                        class="wpforms-field wpforms-field-textarea"
                        data-field-id="2">
                        <label class="wpforms-field-label" for="wpforms-218-field_2">Message
                            <span class="wpforms-required-label">*</span>
                        </label>
                        <textarea
                            id="wpforms-218-field_2"
                            class="wpforms-field-medium wpforms-field-required"
                            name="wpforms[fields][2]"
                            placeholder="Your message..."
                            required></textarea>
                    </div>
                </div><input
                    type="hidden"
                    name="wpforms[recaptcha]"
                    value="">
                <div class="wpforms-submit-container"><input
                        type="hidden"
                        name="wpforms[id]"
                        value="218"><input
                        type="hidden"
                        name="wpforms[author]"
                        value="1"><input
                        type="hidden"
                        name="wpforms[post_id]"
                        value="2">
                    <button
                        type="submit"
                        name="wpforms[submit]"
                        id="wpforms-submit-218"
                        class="wpforms-submit custom-button"
                        data-alt-text="Sending..."
                        data-submit-text="Send"
                        aria-live="assertive"
                        value="wpforms-submit">Send</button><img
                        src="/assets/submit-spin.svg"
                        class="wpforms-submit-spinner"
                        style="display: none;"
                        width="26"
                        height="26"
                        alt="Loading"></div>
            </form>
        </div>
        <!-- .wpforms-container -->
    </div>
</div>

<link
    rel="stylesheet"
    id="wpforms-full-css"
    href="/wp-forms/css/wpforms-full.min.css"
    type="text/css"
    media="all" />

<dialog id="contact-dialog">
    <p>
        Prova Lab came to a close in 2023. If you'd like to get in touch about Prova Lab's work,
        Social Innovation or Social Impact, contact Kathryn Baer on
        <a href="https://www.linkedin.com/in/kathryn-a-baer/" target="_blank" rel="noopener">LinkedIn</a>.
    </p>
    <p>
        If you'd like to get in contact about the website, please contact Alec Fernandes at
        <a href="mailto:al@fern.haus">al@fern.haus</a>.
    </p>
    <p>
        <button id="close" class="custom-button">close</button>
    </p>
</dialog>

<script>
    const contactForm = document.querySelector("#wpforms-form-218"),
        dialog = document.querySelector("#contact-dialog"),
        closeDialog = dialog.querySelector("#close");
    contactForm.onclick = () => dialog.showModal();
    closeDialog.onclick = () => dialog.close();
</script>